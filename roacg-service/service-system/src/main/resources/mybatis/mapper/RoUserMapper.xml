<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roacg.service.system.rouser.dao.RoUserMapper">

    <sql id="Base_Column_List">
	user_id,
	user_name,
	`password`,
	phone,
	email,
	DELETED,
	CREATE_TIME,
	UPDATE_TIME,
	CREATE_AT,
	UPDATE_AT,
	UPDATE_ID
    </sql>

    <resultMap id="BaseResultMap" type="com.roacg.service.system.rouser.model.po.RoUserPO">
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="DELETED" property="deleted" javaType="com.roacg.core.model.enums.DeletedStatusEnum"/>
        <result column="CREATE_TIME" property="createTime"/>
        <result column="UPDATE_TIME" property="updateTime"/>
        <result column="CREATE_AT" property="createAt"/>
        <result column="UPDATE_AT" property="updateAt"/>
        <result column="UPDATE_ID" property="updateId"/>
    </resultMap>

    <insert id="insertUser">
        INSERT INTO tb_ro_user(`user_name`,`password`,`create_time`,`update_time`,`deleted`)
        VALUES (#{user.userName},#{user.password},NOW(),NOW(),0);
    </insert>

    <!--auto generated by MybatisCodeHelper on 2020-03-01-->
    <select id="findOneByUserName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tb_ro_user
        where user_name=#{userName} AND deleted=0
    </select>

    <!--auto generated by MybatisCodeHelper on 2020-03-01-->
    <select id="findOneByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tb_ro_user
        where user_id=#{userId} AND deleted=0
    </select>


</mapper>